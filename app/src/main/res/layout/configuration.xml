<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_top_layout"
    android:layout_marginLeft="@dimen/margin_side_layout"
    android:layout_marginRight="@dimen/margin_side_layout"
    android:layout_marginBottom="@dimen/margin_bottom_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_conf_follow_title"
                style="@style/ConfigurationItemsTitle"
                android:text="@string/conf_follow_title" />

            <TextView
                android:id="@+id/txt_conf_follow_description"
                style="@style/ConfigurationItemsDescription"
                android:text="@string/conf_follow_description" />
        </LinearLayout>

        <Switch
            android:id="@+id/switch_follow"
            android:layout_width="@dimen/buttons_conf"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_conf_mode_title"
                style="@style/ConfigurationItemsTitle"
                android:text="@string/conf_mode_title" />

            <TextView
                android:id="@+id/txt_conf_mode_description"
                style="@style/ConfigurationItemsDescription"
                android:text="@string/conf_mode_description" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_mode"
            android:layout_width="@dimen/buttons_conf"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@android:drawable/ic_menu_more" />


    </LinearLayout>

</LinearLayout>