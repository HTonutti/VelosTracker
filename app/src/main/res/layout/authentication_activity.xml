<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentBackground"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_auth"
        android:textSize="@dimen/text_size_main"
        android:textColor="@color/colorText"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <EditText
        android:id="@+id/txt_mail"
        style="@style/EditTextsAuthentication"
        android:autofillHints=""
        android:hint="@string/auth_email"
        android:inputType="textWebEmailAddress" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <EditText
        android:id="@+id/txt_pass"
        style="@style/EditTextsAuthentication"
        android:autofillHints=""
        android:hint="@string/auth_pass"
        android:inputType="textPassword" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_auth_forgot_pass"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginLeft="@dimen/margin_side_layout"
        android:layout_marginRight="@dimen/margin_side_layout"
        android:text="@string/auth_forgot_pass"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_auth_btn_forgot_pass" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_side_layout"
        android:layout_marginRight="@dimen/margin_side_layout"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_auth_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorText"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_auth_btn"
            android:text="@string/auth_reg" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_auth_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorText"
            android:backgroundTint="@color/colorAccent"
            android:textSize="@dimen/text_size_auth_btn"
            android:text="@string/auth_acc" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_auth_google"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_btn_google"
        android:layout_marginLeft="@dimen/margin_side_layout"
        android:layout_marginRight="@dimen/margin_side_layout"
        android:backgroundTint="@color/colorAuthBackground"
        app:icon="@drawable/googleg_standard_color_18"
        app:iconGravity="textStart"
        app:iconTint="@null"
        app:iconSize="@dimen/auth_btn_img_google"
        android:paddingStart="20dp"
        android:paddingEnd="50dp"
        android:text="@string/auth_btn_google"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_auth_btn_google"
        android:textColor="@color/colorText" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/txt_info_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_side_layout"
        android:layout_marginRight="@dimen/margin_side_layout"
        android:text=""
        android:textAlignment="center"
        android:textSize="@dimen/text_size_auth" />

</LinearLayout>